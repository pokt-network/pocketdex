{
  "verbose": false,
  "watch": [
    "src/*",
    "proto/*",
    "project.ts",
    "schema.graphql",
    ".env.development"
  ],
  "ignore": [
    "src/types/**/*",
    "project.yaml",
    "dist/*",
    "docs/*",
    "docker/*",
    "node_modules/**/*",
    "*/node_modules/**/*",
    ".yarn/**/*"
  ],
  "ext": "ts,proto,graphql",
  "legacyWatch": true,
  "restartable": "rs",
  "signal": "SIGTERM",
  "delay": 2000
}
